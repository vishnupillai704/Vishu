<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"   "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
    <bean id="customer" class="com.example.demo.Assignment1Customerclass">
        <property name="customerId" value="1"/>
        <property name="customerName" value="Vishnu"/>
        <property name="customerContact" value="98"/>
        <property name="customerAddress" value="D-990 block"/>
        <property name="addressclass" ref="Address"/>
    </bean>
    <bean id="Address" class="com.example.demo.Assignment1Addressclass">
        <property name="street" value="Rich street"/>
        <property name="city" value="Anand vihar"/>
        <property name="state" value="UP"/>
        <property name="zip" value="246815"/>
        <property name="country" value="India"/>
    </bean>
</beans>